<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                style="@style/ContextButton"
                android:text="靜音" />

            <Button
                android:id="@+id/button2"
                style="@style/ContextButton"
                android:text="混音" />

            <Button
                android:id="@+id/button3"
                style="@style/ContextButton"
                android:text="按鈕3" />

            <Button
                android:id="@+id/button4"
                style="@style/ContextButton"
                android:text="按鈕4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp1"
                    style="@style/UpDownButton"
                    android:text="@string/UpIcon"
                    tools:ignore="DuplicateSpeakableTextCheck,TextSizeCheck" />

                <Button
                    android:id="@+id/buttonDown1"
                    style="@style/UpDownButton"
                    android:text="@string/DownIcon"
                    tools:ignore="DuplicateSpeakableTextCheck,TextSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp2"
                    style="@style/UpDownButton"
                    android:text="@string/UpIcon"
                    tools:ignore="TextSizeCheck" />

                <Button
                    android:id="@+id/buttonDown2"
                    style="@style/UpDownButton"
                    android:text="@string/DownIcon"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
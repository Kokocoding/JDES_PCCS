<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_context_style"
                android:padding="5dp"
                android:text="靜音"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_context_style"
                android:padding="5dp"
                android:text="混音"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_context_style"
                android:padding="5dp"
                android:text="按鈕3"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_context_style"
                android:padding="5dp"
                android:text="按鈕4"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_context_style"
                    android:padding="5dp"
                    android:text="@string/UpIcon"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/buttonDown1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_context_style"
                    android:padding="5dp"
                    android:text="@string/DownIcon"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp2"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_context_style"
                    android:padding="5dp"
                    android:text="@string/UpIcon"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/buttonDown2"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_context_style"
                    android:padding="5dp"
                    android:text="@string/DownIcon"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>